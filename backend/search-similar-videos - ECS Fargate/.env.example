# OpenSearch Configuration
OPENSEARCH_CLUSTER_HOST=your-opensearch-cluster-host.us-east-1.es.amazonaws.com

# AWS Configuration (for local development)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_SESSION_TOKEN=your_session_token

# Application Configuration
PORT=8000

# Auth (JWT) - tokens do not expire
JWT_SECRET=change-me
JWT_ISSUER=video-search
JWT_AUDIENCE=video-search-ui

# DocumentDB (Mongo API) - used by /auth/login
# Example: mongodb://user:pass@cluster.cluster-xyz.us-east-1.docdb.amazonaws.com:27017/?tls=true&replicaSet=rs0&readPreference=secondaryPreferred&retryWrites=false
DOCDB_URI=
DOCDB_DB=video_search
DOCDB_USERS_COLLECTION=users
DOCDB_AUTH_TIMEOUT_SECONDS=20

# Optional: local dev without DocumentDB (bypass DB, use fixed user)
# AUTH_DEV_MODE=true
# AUTH_DEV_USERNAME=dev
# AUTH_DEV_PASSWORD=dev
# AUTH_DEV_EMAIL=dev@example.com
